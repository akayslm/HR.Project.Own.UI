@using HR.Project.Own.EntityLayer.Concrete
@using HR.Project.Own.EntityLayer.Enum
@model Spending

@{
    ViewData["Title"] = "Harcama Talep Et";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<body>
    <form asp-controller="Spending" asp-action="SpendingRequest" method="post" novalidate="novalidate">
        <div class="col-9 mx-auto">
            <div style="background-color:honeydew" class="card">
                <div class="card-body">
                    <h2 class="card-title">HARCAMA TALEP ET</h2>
                    <br />
                    <div class="row">
                        <div class="form-group row">
                            <label asp-for="SpendingType" class="col-sm-3 col-form-label">Harcama Türü</label>
                            <div class="col-sm-9">
                                <select asp-for="SpendingType" class="form-control" asp-items="@Html.GetEnumSelectList(typeof(SpendingType))">
                                    <option>Lütfen Bir Harcama Türü Seçiniz...</option>
                                </select>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="form-group row">
                            <label class="col-sm-3 col-form-label">Harcama Miktarı</label>
                            <div class="col-sm-9">
                                <input asp-for="SpendingAmount" type="number" class="form-control" />
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="form-group row">
                            <label asp-for="Currency" class="col-sm-3 col-form-label">Para Birimi</label>
                            <div class="col-sm-9">
                                <select asp-for="Currency" class="form-control" asp-items="@Html.GetEnumSelectList(typeof(Currency))">
                                    <option>Lütfen Bir Para Birimi Seçiniz...</option>
                                </select>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="form-group row">
                            <label asp-for="Description" class="col-sm-3 col-form-label">Açıklama</label>
                            <div class="col-sm-9">
                                <textarea asp-for="Description" style="margin-bottom:20px" id="aciklama" name="#" rows="4" class="form-control"></textarea>
                            </div>
                        </div>
                    </div>
                    <button style="margin-bottom:60px" type="submit" class="btn btn-gradient-info btn-block">Kaydet</button>
                    <br />
                </div>
            </div>
        </div>
    </form>

    <!-- container-scroller -->
    <!-- plugins:js -->
    <script src="~/writer/assets/vendors/js/vendor.bundle.base.js"></script>
    <!-- endinject -->
    <!-- Plugin js for this page -->
    <!-- End plugin js for this page -->
    <!-- inject:js -->
    <script src="~/writer/assets/js/off-canvas.js"></script>
    <script src="~/writer/assets/js/hoverable-collapse.js"></script>
    <script src="~/writer/assets/js/misc.js"></script>
    <!-- endinject -->
    <!-- Custom js for this page -->
    <script src="~/writer/assets/js/file-upload.js"></script>
    <!-- End custom js for this page -->
</body>

