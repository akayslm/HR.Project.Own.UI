@using HR.Project.Own.EntityLayer.Concrete
@using HR.Project.Own.EntityLayer.Enum
@model User

@{
    ViewData["Title"] = "Bilgilerim";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<body>
    <form>
        <div class="col-12">
            <div style="background-color:honeydew" class="card">
                <div class="card-body">
                    <h3 class="card-title">BİLGİLERİM</h3>
                    <br />
                    <form class="form-sample">
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group row">
                                    <label asp-for="Adi" class="col-sm-3 col-form-label">Adı</label>
                                    <div class="col-sm-9">
                                        <input asp-for="Adi" type="text" class="form-control" disabled />
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group row">
                                    <label asp-for="Adi2" class="col-sm-3 col-form-label">2. Adı</label>
                                    <div class="col-sm-9">
                                        <input asp-for="Adi2" type="text" class="form-control" disabled />
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group row">
                                    <label asp-for="Soyadi" class="col-sm-3 col-form-label">Soyadı</label>
                                    <div class="col-sm-9">
                                        <input asp-for="Soyadi" type="text" class="form-control" disabled />
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group row">
                                    <label asp-for="CepTelefonu" class="col-sm-3 col-form-label">Telefonu</label>
                                    <div class="col-sm-9">
                                        <input asp-for="CepTelefonu" type="number" class="form-control" disabled />
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group row">
                                    <label asp-for="Email" class="col-sm-3 col-form-label">Mail Adresi</label>
                                    <div class="col-sm-9">
                                        <input asp-for="Email" type="email" class="form-control" disabled />
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group row">
                                    <label asp-for="DogumTarihi" class="col-sm-3 col-form-label">Doğum Tarihi</label>
                                    <div class="col-sm-9">
                                        <input asp-for="DogumTarihi" class="form-control" type="date" disabled />
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group row">
                                    <label asp-for="TCNo" class="col-sm-3 col-form-label">TC No</label>
                                    <div class="col-sm-9">
                                        <input asp-for="TCNo" type="number" class="form-control" disabled />
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group row">
                                    <label asp-for="Gender" class="col-sm-3 col-form-label">Cinsiyeti</label>
                                    <div class="col-sm-9">
                                        <select asp-for="Gender" class="form-control" asp-items="@Html.GetEnumSelectList(typeof(Gender))">
                                            <option>Cinsiyetiniz</option>
                                        </select>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group row">
                                    <label asp-for="IseGirisTarihi" class="col-sm-3 col-form-label">İşe Giriş Tarihi</label>
                                    <div class="col-sm-9">
                                        <input asp-for="IseGirisTarihi" class="form-control" type="date" disabled />
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group row">
                                    <label asp-for="IstenCikisTarihi" class="col-sm-3 col-form-label">İşten Çıkış Tarihi</label>
                                    <div class="col-sm-9">
                                        <input asp-for="IstenCikisTarihi" class="form-control" type="date" disabled />
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-12">
                                <div class="form-group row">
                                    <label asp-for="Adres" class="col-sm-3 col-form-label">Adresi</label>
                                    <div class="col-sm-12">
                                        <textarea asp-for="Adres" style="margin-bottom:20px" id="adres1" name="#" rows="4" class="form-control" disabled></textarea>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <br />
                    </form>
                </div>
            </div>
        </div>
    </form>

    <!-- container-scroller -->
    <!-- plugins:js -->
    <script src="../../assets/vendors/js/vendor.bundle.base.js"></script>
    <!-- endinject -->
    <!-- Plugin js for this page -->
    <!-- End plugin js for this page -->
    <!-- inject:js -->
    <script src="../../assets/js/off-canvas.js"></script>
    <script src="../../assets/js/hoverable-collapse.js"></script>
    <script src="../../assets/js/misc.js"></script>
    <!-- endinject -->
    <!-- Custom js for this page -->
    <script src="../../assets/js/file-upload.js"></script>
    <!-- End custom js for this page -->
</body>

