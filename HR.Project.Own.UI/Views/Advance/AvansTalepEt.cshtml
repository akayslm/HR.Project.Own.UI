@{
    ViewData["Title"] = "Avans Talep Et";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<body>
    <form>
        <div class="col-9 mx-auto">
            <div style="background-color:honeydew" class="card">
                <div class="card-body">
                    <h2 class="card-title">AVANS TALEP ET</h2>
                    <div class="row">
                        <div class="form-group row">
                            <label class="col-sm-3 col-form-label">Avans Türü</label>
                            <div class="col-sm-9">
                                <input type="text" class="form-control" />
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="form-group row">
                            <label class="col-sm-3 col-form-label">Avans Miktarı</label>
                            <div class="col-sm-9">
                                <input type="text" class="form-control" />
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="form-group row">
                            <label class="col-sm-3 col-form-label">Para Birimi</label>
                            <div class="col-sm-9">
                                <input type="text" class="form-control" />
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="form-group row">
                            <label class="col-sm-3 col-form-label">Açıklama</label>
                            <div class="col-sm-9">
                                <textarea style="margin-bottom:20px" id="aciklama" name="#" rows="4" class="form-control"></textarea>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="form-group row">
                            <label class="col-sm-3 col-form-label">Dosya Ekle</label>
                            <div class="col-sm-9">
                                <input type="file" class="form-control" accept="image/*"/>
                            </div>
                        </div>
                    </div>
                    <button type="submit" class="btn btn-gradient-primary btn-rounded btn-fw text-center">Kaydet</button>
                    <br />
                </div>
            </div>
        </div>

    </form>

    <script src="~/writer/assets/vendors/js/vendor.bundle.base.js"></script>
    <script src="~/writer/assets/js/off-canvas.js"></script>
    <script src="~/writer/assets/js/hoverable-collapse.js"></script>
    <script src="~/writer/assets/js/misc.js"></script>
    <!-- endinject -->
    <!-- Custom js for this page -->
    <script src="~/writer/assets/js/file-upload.js"></script>
    <!-- End custom js for this page -->
</body>


